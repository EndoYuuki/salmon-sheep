---
import Hamburger from './Hamburger.astro';
import Navigation from './Navigation.astro';
import ThemeIcon from './ThemeIcon.astro';
---
<style>
    header {
        border-bottom: 1px solid #bbbbbb;
    }

    header .content {
        width: 100%;
        max-width: 80ch;
    }

    nav {
      display: flex;
    }
</style>

<header>
<div class="content">
  <nav>
    <Hamburger />
    <Navigation />
    <ThemeIcon />
  </nav>
</div>
</header>